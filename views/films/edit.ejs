<!DOCTYPE html>
<html>
  <head>
    <title>Edit Film</title>
  </head>
  <body>
    <main>
      <h1>Edit Film</h1>
      <form
        action="/films/<%= film.film_id %>?_method=PUT"
        method="POST"
        enctype="multipart/form-data"
      >
        <label for="title">Title:</label>
        <input type="text" name="title" value="<%= film.title %>" required />

        <div class="upload-group">
          <label>Poster Image</label>
          <div class="upload-options">
            <div>
              <label for="poster_file" class="upload-label"
                >Upload from Computer</label
              >
              <input
                type="file"
                id="poster_file"
                name="poster_file"
                accept="image/*"
              />
            </div>
            <div>
              <label for="poster_url">Or paste Image URL</label>
              <input
                type="text"
                name="poster_url"
                value="<%= film.poster_url || film.image_url || '' %>"
                placeholder="https://.../poster.jpg"
              />
            </div>
          </div>
        </div>

        <label for="release_year">Release Year:</label>
        <input
          type="number"
          name="release_year"
          value="<%= film.release_year %>"
        />

        <label for="duration_minutes">Duration (minutes):</label>
        <input
          type="number"
          name="duration_minutes"
          value="<%= film.duration_minutes %>"
        />

        <label for="rating">Rating:</label>
        <input type="text" name="rating" value="<%= film.rating %>" />

        <label for="category_id">Category ID:</label>
        <input
          type="number"
          name="category_id"
          value="<%= film.category_id %>"
        />

        <label for="description">Description:</label>
        <textarea name="description"><%= film.description %></textarea>

        <button class="btn" type="submit">Update Film</button>
      </form>
      <a class="btn ghost" href="/films">Back to Films</a>
    </main>
  </body>
</html>
