<!DOCTYPE html>
<html>
  <head>
    <title>Edit Film</title>
  </head>
  <body>
    <h1>Edit Film</h1>
    <form action="/films/<%= film.film_id %>?_method=PUT" method="POST">
      <label for="title">Title:</label>
      <input type="text" name="title" value="<%= film.title %>" required />
      <br />
      <label for="release_year">Release Year:</label>
      <input
        type="number"
        name="release_year"
        value="<%= film.release_year %>"
      />
      <br />
      <label for="duration_minutes">Duration (minutes):</label>
      <input
        type="number"
        name="duration_minutes"
        value="<%= film.duration_minutes %>"
      />
      <br />
      <label for="rating">Rating:</label>
      <input type="text" name="rating" value="<%= film.rating %>" />
      <br />
      <label for="category_id">Category ID:</label>
      <input type="number" name="category_id" value="<%= film.category_id %>" />
      <br />
      <label for="description">Description:</label>
      <textarea name="description"><%= film.description %></textarea>
      <br />
      <button type="submit">Update Film</button>
    </form>
    <a href="/films">Back to Films</a>
  </body>
</html>
