<!DOCTYPE html>
<html>
  <head>
    <title>Edit Actor</title>
  </head>
  <body>
    <h1>Edit Actor</h1>
    <form action="/actors/<%= actor.actor_id %>?_method=PUT" method="POST">
      <label for="name">Name</label>
      <input type="text" name="name" value="<%= actor.name %>" required />

      <label for="birth_year">Birth Year</label>
      <input type="number" name="birth_year" value="<%= actor.birth_year %>" />

      <label for="nationality">Nationality</label>
      <input type="text" name="nationality" value="<%= actor.nationality %>" />

      <button type="submit">Update Actor</button>
    </form>

    <a href="/actors/<%= actor.actor_id %>">Cancel</a>
  </body>
</html>
