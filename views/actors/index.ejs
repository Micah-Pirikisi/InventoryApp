<!DOCTYPE html>
<html>
  <head>
    <title>Actors</title>
  </head>
  <body>
    <h1>All Actors</h1>
    <ul class="list-cards">
      <% actors.forEach(actor => { %>
      <li>
        <div style="display: flex; align-items: center; gap: 12px">
          <img
            class="avatar"
            alt="<%= actor.name %>"
            src="<%= actor.image_url || actor.photo_url || ('/profiles/' + actor.actor_id + '.jpg') || '/profile-placeholder.svg' %>"
          />
          <a class="card-link" href="/actors/<%= actor.actor_id %>"
            ><%= actor.name %></a
          >
        </div>
        <div class="actions">
          <a class="btn ghost" href="/actors/<%= actor.actor_id %>/edit"
            >Edit</a
          >
        </div>
      </li>
      <% }) %>
    </ul>
    <a class="btn" href="/actors/new">+ Add New Actor</a>
  </body>
</html>
